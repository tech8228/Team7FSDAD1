<Window x:Class="SchoolProject_WPF.StudentLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolProject_WPF"
        mc:Ignorable="d" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Student Login" Height="339" Width="418">
    <Grid Margin="0,0,0,25">

        <StackPanel VerticalAlignment="Top" Margin="0,48,-10,0" Height="248">
            <TextBlock Text="Student Login" FontSize="24" Foreground="DarkBlue" HorizontalAlignment="Center"/>
            <Label Content="Student Name" Foreground="DarkBlue" Width="376"/>
            <TextBox x:Name="TbxStudentName" Margin="10" Width="363"/>
            <Label Content="Password" Foreground="DarkBlue" Width="376"/>
            
            <PasswordBox x:Name="TbxPassword" Margin="10" Width="363"/>
            <Button x:Name="BtnStudentLogin" Content="Login" Margin="10" Background="LightBlue" Click="BtnStudentLogin_Click" Width="366"/>
            <Button x:Name="BtnStudentReturn" Content="Return" Background="LightBlue" Click="BtnStudentReturn_Click" Height="20" Width="366"/>
        </StackPanel>
    </Grid>
</Window>
