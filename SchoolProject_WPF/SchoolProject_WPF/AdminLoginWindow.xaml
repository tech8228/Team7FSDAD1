<Window x:Class="SchoolProject_WPF.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolProject_WPF"
        mc:Ignorable="d" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Admin Login" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" Height="264">
            <TextBlock Text="Admin Login" FontSize="24" Foreground="DarkBlue" HorizontalAlignment="Center"/>
            <Label Content="Admin Name" Foreground="DarkBlue" Margin="10,20,10,0"/>
            <TextBox x:Name="TbxUserName" Width="372"/>
            <Label Content="Password" Foreground="DarkBlue" Width="378" Margin="10,20,10,0"/>
            <PasswordBox x:Name="TbxUserPassword" Margin="10" Width="372"/>
            
            <!--<PasswordBox x:Name="txtPassword" Width="374"/>-->
            <Button x:Name="BtnAdminLogin" Content="Login" Margin="10" Background="LightBlue" Click="BtnAdminLogin_Click" Width="374"/>
            <Button x:Name="BtnAdminReturn" Content="Return" Background="LightBlue" Click="BtnAdminReturn_Click" Width="372"/>
        </StackPanel>
    </Grid>
</Window>
