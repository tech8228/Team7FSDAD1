<Window x:Class="SchoolProject_WPF.MainStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolProject_WPF"
        mc:Ignorable="d"  ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Student Window" Height="500" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" Height="450">
            <TextBlock x:Name="TbxStudent" Text="-" FontSize="24" Foreground="DarkBlue" HorizontalAlignment="Center"/>
            
            <DataGrid x:Name="DgStudent" Width="450" Height="300" AutoGenerateColumns="True" />


            <Button x:Name="BtnRefresh" Content="Refresh" Margin="10,30,10,0" Background="LightBlue"  Width="374" Click="BtnRefresh_Click" />
            <Button x:Name="BtnFrmCancel" Content="Sign Out" Margin="10,5,10,0" Background="LightBlue"  Width="374" Click="BtnFrmCancel_Click" />
            

        </StackPanel>
    </Grid>
</Window>
