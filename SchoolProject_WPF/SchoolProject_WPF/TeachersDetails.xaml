<Window x:Class="SchoolProject_WPF.TeachersDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolProject_WPF"
        mc:Ignorable="d"  ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Teachers Details" Height="500" Width="530">
    <Grid>



        <StackPanel VerticalAlignment="Top" Height="320" Margin="10,57,139,0">

            <DataGrid x:Name="DgTeacher" MouseDoubleClick="DgTeacher_MouseDoubleClick" Width="360" Height="252" AutoGenerateColumns="True" />

            <Button x:Name="BtnFrmRefresh" Content="Refresh" Margin="10,20,10,0" Background="LightBlue"  Width="281" Click="BtnFrmRefresh_Click" />

            <Button x:Name="BtnFrmCancel" Content="Back" Margin="10,05,10,0" Background="LightBlue"  Width="281" Click="BtnFrmCancel_Click" />


        </StackPanel>
        
        <Button x:Name="BtnNewTeacher" Content="New Teacher" Background="LightBlue" HorizontalAlignment="Center" Margin="0,17,0,0" VerticalAlignment="Top" Width="76" Click="BtnNewTeacher_Click"/>
        <!--<ListView x:Name="LsvCourseView" HorizontalAlignment="Left" Height="250" Margin="395,57,0,0" VerticalAlignment="Top" Width="108"/> -->
    </Grid>
</Window>
