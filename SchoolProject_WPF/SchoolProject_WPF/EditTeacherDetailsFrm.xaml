<Window x:Class="SchoolProject_WPF.EditTeacherDetailsFrm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolProject_WPF"
        mc:Ignorable="d" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Edit Teacher Details" Height="500" Width="410">
    <Grid>

        <StackPanel VerticalAlignment="Center" Height="450">
            <TextBlock Text="Edit " FontSize="24" Foreground="DarkBlue" HorizontalAlignment="Center"/>
            <Label Content="Name: " Foreground="DarkBlue" Margin="10,20,10,0"/>
            <TextBox x:Name="TbxRegTeacherName" Width="372" Margin="10,0,10,0"/>

            <Label Content="Date of Birth" Foreground="DarkBlue" Margin="10,10,10,0"/>

            <DatePicker x:Name="TbxRegDatePicker" Width="372" Margin="10,0,10,0"/>
            <Label Content="Email: " Foreground="DarkBlue" Margin="10,5,10,0"/>
            <TextBox x:Name="TbxFrmEmail" Width="372" Margin="10,0,10,0"/>
            
            <Label Content="Password: " Foreground="DarkBlue" Margin="10,5,10,0"/>
            
            <PasswordBox x:Name="TbxFrmPassword" Width="372" Margin="10,0,10,0"/>

            <Button x:Name="BtnFrmEdit" Content="Edit" Margin="10,30,10,0" Background="LightBlue"  Width="374" Click="BtnFrmEdit_Click"/>
            <Button x:Name="BtnDelete" Content="Delete" Margin="10,10,10,0" Background="LightBlue"  Width="374" Click="BtnFrmDelete_Click"/>
            <Button x:Name="BtnFrmCancel" Content="Back" Margin="10,10,10,0" Background="LightBlue"  Width="374" Click="BtnFrmCancel_Click"/>

        </StackPanel>

    </Grid>
</Window>
