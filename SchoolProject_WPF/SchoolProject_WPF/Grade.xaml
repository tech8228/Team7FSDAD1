<Window x:Class="SchoolProject_WPF.Grade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolProject_WPF"
        mc:Ignorable="d" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Update Grade" Height="210" Width="200">
    <Grid Margin="0,0,0,25">

        <StackPanel VerticalAlignment="Top" Margin="5,20,5,0" Height="200">
            <Label Content="Update Grade" Foreground="DarkBlue" Width="100" HorizontalContentAlignment="Center"/>
            <TextBox x:Name="TbxGrade" Margin="10" Width="100"/>

            <Button x:Name="BtnGradeUpdate" Content="New Grade" Margin="10,5" Background="LightBlue" Click="BtnGradeUpdate_Click" Width="100"/>
            <Button x:Name="BtnGradeCanecl" Content="Back" Margin="10,5" Background="LightBlue" Click="BtnGradeCancel_Click" Width="100"/>

        </StackPanel>
    </Grid>
</Window>
