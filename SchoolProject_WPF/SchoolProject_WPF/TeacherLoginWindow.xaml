<Window x:Class="SchoolProject_WPF.TeacherLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolProject_WPF"
        mc:Ignorable="d" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Teacher Login" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" Height="239" Margin="0,0,10,0">
            
            <TextBlock Text="Teacher Login" FontSize="24" Foreground="DarkBlue" HorizontalAlignment="Center"/>
            <Label
            Content="User Name" Foreground="DarkBlue" Width="358"/>
            <TextBox x:Name="TbxUserName" Width="360"/>
            <Label Content="Password" Foreground="DarkBlue" Width="363" Margin="10,20,10,0"/>
            <TextBox x:Name="TbxUserPassword" Width="360"/>
            <Button x:Name="BtnUserLogin" Content="Login" Margin="10" Background="LightBlue" Click="BtnUserLogin_Click" Width="361"/>
            <Button x:Name="BtnUserReturn" Content="Return" Background="LightBlue" Click="BtnUserReturn_Click" Height="20" Width="360"/>



        </StackPanel>
    </Grid>
</Window>
